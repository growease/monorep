# Environment
NODE_ENV=development

# API Server
PORT_API=3001
API_URL=http://localhost:3001

# Web Server
PORT_WEB=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Database
MONGODB_URI=mongodb://localhost:27017/growease

# GraphQL
GRAPHQL_SCHEMA_PATH=apps/api/src/schema.gql

# Secrets (for development only)
# In staging/production, these should come from a secret manager (Doppler, AWS Secrets Manager, etc.)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Ngrok (optional, for webhooks)
NGROK_AUTHTOKEN=your-ngrok-token-here
